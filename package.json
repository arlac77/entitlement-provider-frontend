{
  "name": "entitlement-provider-frontend",
  "version": "0.0.0-semantic-release",
  "description": "web frontend for the entitlement-provider",
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "test": "ava",
    "docs": "documentation readme {{module}} --section=API",
    "lint": "documentation lint {{module}}"
  },
  "dependencies": {
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^1.3.0",
    "svelte-guard-history-router": "^1.1.10",
    "svelte-session-manager": "^1.0.4",
    "svelte-websocket-store": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@semantic-release/exec": "^4.0.0",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "npm-pkgbuild": "^6.11.4",
    "rollup": "^1.30.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-dev": "^1.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "semantic-release": "^17.0.0",
    "svelte": "^3.17.3"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider-frontend#readme",
  "config": {
    "api": "/services/entitlements/api",
    "api_ws": "wss://mfelten.dynv6.net/services/entitlements/api",
    "base": "/services/entitlements",
    "proxyTarget": "https://mfelten.dynv6.net/"
  },
  "pacman": {
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "entitlement-provider": ">=2.3.6",
      "systemd": ">=244",
      "nginx-mainline": ">=1.17.4"
    },
    "groups": "services",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/entitlement-provider/frontend"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-svelte-app.git"
    }
  }
}
