{
  "name": "entitlement-provider-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "web frontend for the entitlement-provider",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^2.4.93",
    "mf-styling": "^1.7.33",
    "svelte-command": "^1.1.27",
    "svelte-common": "^4.21.8",
    "svelte-entitlement": "^1.2.39",
    "svelte-guard-history-router": "^5.5.17",
    "svelte-session-manager": "^2.0.11",
    "svelte-websocket-store": "^1.1.33"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "npm-pkgbuild": "^10.18.2",
    "semantic-release": "^20.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "svelte": "^3.55.1",
    "vite": "^4.0.4"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider-frontend"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider-frontend#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "depends": {
      "entitlement-provider": ">=2.9.121"
    },
    "http.path": "${http.base.path}/entitlements",
    "install.dir": "${install.base.dir}entitlement-provider/frontend/",
    "title": "Entitlements"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-nginx",
      "arlac77/template-svelte-app"
    ]
  }
}
