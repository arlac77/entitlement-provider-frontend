{
  "name": "entitlement-provider-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "packageManager": "npm@11.10.0",
  "description": "web frontend for the entitlement-provider",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "lint": "node --run lint:css",
    "lint:css": "stylelint ./src**/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^4.0.41",
    "mf-styling": "^3.3.9",
    "svelte-command": "^3.0.59",
    "svelte-common": "^6.19.78",
    "svelte-entitlement": "^2.0.68",
    "svelte-guard-history-router": "^7.0.17",
    "svelte-session-manager": "^3.0.83",
    "svelte-websocket-store": "^1.2.7"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/vite-plugin-svelte": "^7.0.0",
    "npm-pkgbuild": "^20.6.4",
    "semantic-release": "^25.0.3",
    "stylelint": "^17.4.0",
    "stylelint-config-standard": "^40.0.0",
    "svelte": "^5.53.5",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^2.4.0"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/entitlement-provider-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider-frontend#readme",
  "pkgbuild": {
    "content": {
      "${install_dir}": "build/",
      "${nginx_sites_dir}${name}-well-known.conf": "pkg/nginx.conf"
    },
    "depends": {
      "entitlement-provider": ">=2.10.43"
    },
    "frontend": true,
    "http_path": "${http_base_path}/entitlements",
    "install_dir": "${install_base_dir}entitlement-provider/frontend/",
    "title": "Entitlement Provider"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist --verbose"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
