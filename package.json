{
  "name": "entitlement-provider-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "web frontend for the entitlement-provider",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^2.4.93",
    "mf-styling": "^1.7.59",
    "svelte-command": "^1.1.42",
    "svelte-common": "^4.22.22",
    "svelte-entitlement": "^1.2.53",
    "svelte-guard-history-router": "^5.5.36",
    "svelte-session-manager": "^2.2.6",
    "svelte-websocket-store": "^1.1.33"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^11.0.1",
    "@sveltejs/vite-plugin-svelte": "^2.0.4",
    "npm-pkgbuild": "^11.7.7",
    "semantic-release": "^21.0.1",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "^33.0.0",
    "svelte": "^3.58.0",
    "vite": "^4.2.1"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^1.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider-frontend"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider-frontend#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}-well-known.conf": "pkg/nginx.conf"
    },
    "depends": {
      "entitlement-provider": ">=2.9.121"
    },
    "frontend": true,
    "http.path": "${http.base.path}/entitlements",
    "install.dir": "${install.base.dir}entitlement-provider/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
